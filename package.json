{
  "name": "checkinkids-api",
  "version": "1.0.0",
  "description": "API de gerenciamento de checkin de crian√ßas no culto infantil.",
  "author": "Rickson Thompson",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "npx prisma migrate dev && nest start",
    "start:dev": "yarn migrate:dev && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "build": "nest build",
    "migrate:prod": "prisma migrate deploy",
    "migrate:dev": "npx prisma migrate dev",
    "generate:schemas": "prisma generate",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "MOCK_SERVER=true jest --config ./test/jest-e2e.json --runInBand --forceExit"
  },
  "dependencies": {
    "@golevelup/ts-jest": "0.4.0",
    "@nestjs/common": "10.2.1",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.2.1",
    "@nestjs/jwt": "10.1.0",
    "@nestjs/platform-express": "10.2.1",
    "@prisma/client": "5.2.0",
    "axios": "1.4.0",
    "bcrypt": "5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.0",
    "crypto": "^1.0.1",
    "date-fns": "2.30.0",
    "date-fns-tz": "2.0.0",
    "nestjs-request-context": "3.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "7.8.1",
    "source-map-support": "^0.5.21",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.16",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.2.1",
    "@types/axios": "^0.14.0",
    "@types/date-fns": "^2.6.0",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.4",
    "@types/node": "20.5.6",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "9.0.2",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.6.4",
    "prettier": "3.0.2",
    "prisma": "5.2.0",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 60,
        "lines": 70,
        "statements": 70
      }
    },
    "preset": "ts-jest",
    "restoreMocks": true,
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "/node_modules/",
      "\\.pnp\\.[^\\/]+$",
      ".module.ts",
      ".repository.ts"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
