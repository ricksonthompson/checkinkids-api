{
  "name": "checkinkids-api",
  "version": "1.0.0",
  "description": "API de gerenciamento de checkin de crian√ßas no culto infantil.",
  "author": "Rickson Thompson",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "npx prisma migrate dev && nest start",
    "start:dev": "yarn migrate:dev && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "build": "nest build",
    "migrate:prod": "prisma migrate deploy",
    "migrate:dev": "npx prisma migrate dev",
    "generate:schemas": "prisma generate",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "MOCK_SERVER=true jest --config ./test/jest-e2e.json --runInBand --forceExit"
  },
  "dependencies": {
    "@golevelup/ts-jest": "^0.3.3",
    "@nestjs/common": "9.2.1",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.2.1",
    "@nestjs/platform-express": "9.2.1",
    "@prisma/client": "4.8.1",
    "axios": "1.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "0.14.0",
    "crypto": "^1.0.1",
    "date-fns": "2.29.3",
    "date-fns-tz": "1.3.7",
    "nestjs-request-context": "2.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "7.8.0",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "9.1.8",
    "@nestjs/schematics": "9.0.4",
    "@nestjs/testing": "9.2.1",
    "@types/axios": "^0.14.0",
    "@types/date-fns": "^2.6.0",
    "@types/express": "4.17.15",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "9.0.0",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "eslint": "8.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "2.8.3",
    "prisma": "4.8.1",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 60,
        "lines": 70,
        "statements": 70
      }
    },
    "preset": "ts-jest",
    "restoreMocks": true,
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "/node_modules/",
      "\\.pnp\\.[^\\/]+$",
      ".module.ts",
      ".repository.ts"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
